<div class="modal fade" id="messaging" role="dialog" aria-labelledby="messaging" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="messaging">Rio Runner</h4>
      </div>
      <div class="modal-body">
        <div class = "row">
          <div class = "col-sm-10">
            <h2 class = "text-center">Send Message</h2>

            <%= form_for( Message.new, html: {class:"form-horizontal", role: "form"}) do |f|%>

                <div class = "form-group">
                  <div class = "col-sm-10">
                    <%= f.hidden_field(:recipient_id, :value => @message.sender_id)%>
                  </div>
                </div>
                <div class = "form-group">
                  <div class = "col-sm-10">
                    <%= f.hidden_field(:task_id, :value => @message.task_id)%>
                  </div>
                </div>

                <div class = "form-group">
                  <div class = "col-sm-10">
                    <%= f.hidden_field(:subject, :value => "You have unfortunately not been chosen for job # #{@message.task_id}")%>
                  </div>
                </div>
                <div class = "form-group">
                  <div class = "col-sm-10">
                    <%= f.hidden_field(:message_type, :value => "decline")%>
                  </div>
                </div>

                <div class = "form-group">
                  <%= f.label :body, class: "col-sm-2 control-label"  do %>
                      <i class="fa fa-envelope-o fa-fw"></i>
                  <% end %>
                  <div class = "col-sm-10">
                    <%= f.text_area :body, class:"form-control col-sm-offset-1", placeholder: "Body" %>
                  </div>
                </div>
                <div class = "row">
                  <%= f.submit "Send Message", class:"back-btn pull-right col-sm-offset-3"%>
                </div>
                </div>
                </div>
            <% end %>
            </div>
    </div>
  </div>
</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->