          <%= image_tag("rr_logo2.png") %>
      <% end %>
  <% else %>
      <%= link_to root_url, class: "brand" do %>
          <%= image_tag("rr_logo2.png") %>
      <% end %>
  <% end %>

  <% if user_signed_in? %>
  <div class="sidebar-toggle-box">
    <div class="fa fa-bars"></div>
  </div>
  <% end %>
</div>



<!--logo end-->
<% if user_signed_in? %>
<div class="nav notify-row" id="top_menu">
  <!--  notification start -->
  <ul class="nav top-menu">

    <!-- inbox dropdown start-->
    <li id="header_inbox_bar" class="dropdown">
      <a data-toggle="dropdown" class="dropdown-toggle" href="#">
        <i class="fa fa-envelope-o"></i>
        <% if current_user.messages.where(:message_status => 'unread').present? %>
        <span class="badge bg-important"><%= current_user.messages.where(:message_status => 'unread').count %></span>
        <% end %>
      </a>
      <ul class="dropdown-menu extended inbox">
        <div class = "row">
          <div class = "col-xs-12">
        <li>
          <p>You have <%= current_user.messages.where(:message_status => 'unread').count %> new messages</p>
        </li>
        <% if current_user.messages.where(:message_status => 'unread').present? %>
            <% current_user.messages.where(:message_status => 'unread').each do |message| %>
                <li>
                    <a href = "<%= message_path(message.id) %>">
                      <span class="photo"><img alt="avatar" src="images/avatar-mini.jpg"></span>
                      <span class="subject">
                                <span class="from"><%= User.find(message.sender_id).first_name %>&nbsp;<%= User.find(message.sender_id).last_initial %>.</span>
                                <span class="time"><% if message.created_at.to_date == Date.today %>
              <%= message.created_at.strftime("%I:%M%p") %>
          <% else %> <%= message.created_at.strftime("%B %d") %><%end %></span>
                                </span>
                                <span class="message">
                                    <%= message.subject %>
                                </span>
                    </a>
                </li>
            <% end %>
        <% end %>
        <li>
          <%= link_to "View All Messages", inbox_path(current_user.id)  %>
        </li>
          </div>
        </div>
      </ul>
    </li>
    <!-- inbox dropdown end -->

    <!-- notification dropdown start-->
    <li id="header_notification_bar" class="dropdown">
      <a data-toggle="dropdown" class="dropdown-toggle" href="#">
        <i class="fa fa-bell-o"></i>
        <% if current_user.messages.where(:message_status => 'unread', :message_type => 'inquiry').present? || current_user.messages.where(:message_status => 'unread', :message_type => 'confirmation').present? %>
            <span class="badge bg-important"><%= current_user.messages.where(:message_status => 'unread', :message_type => 'inquiry').count + current_user.messages.where(:message_status => 'unread', :message_type => 'confirmation').count %></span>
        <% end %>
      </a>
      <ul class="dropdown-menu extended inbox">
        <div class = "row">
          <div class = "col-xs-12">
        <li>
          <p>You have <%= current_user.messages.where(:message_status => 'unread', :message_type => 'inquiry').count + current_user.messages.where(:message_status => 'unread', :message_type => 'confirmation').count %> new messages</p>
        </li>
        <% if current_user.messages.where(:message_status => 'unread', :message_type => 'inquiry').present? || current_user.messages.where(:message_status => 'unread', :message_type => 'confirmation').present? %>
            <% current_user.messages.where(:message_status => 'unread').each do |message| %>
                <li>
                  <a href = "<%= message_path(message.id) %>">
                    <span class="photo"><img alt="avatar" src="images/avatar-mini.jpg"></span>
                      <span class="subject">
                                <span class="from"><%= User.find(message.sender_id).first_name %>&nbsp;<%= User.find(message.sender_id).last_initial %>.</span>
                                <span class="time"><% if message.created_at.to_date == Date.today %>
              <%= message.created_at.strftime("%I:%M%p") %>
          <% else %> <%= message.created_at.strftime("%B %d") %><%end %></span>
                                </span>
                                <span class="message">
                                    <%= message.subject %>
                                </span>
                  </a>
                </li>
            <% end %>
        <% end %>
        <li>
          <%= link_to "View All Messages", inbox_path(current_user.id)  %>
        </li>
        </div>
        </div>
      </ul>
    </li>
</div>
<% end %>

