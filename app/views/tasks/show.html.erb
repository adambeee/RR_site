<!-- Modal for Messaging -->

<div class="modal fade" id="messaging" role="dialog" aria-labelledby="messaging" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="messaging">Rio Runner</h4>
      </div>
      <div class="modal-body">
        <div class = "row">
          <div class = "col-sm-10">
            <h2 class = "text-center">Send Message</h2>

            <%= form_for(@message, html: {class:"form-horizontal", role: "form"}) do |f|%>

                <div class = "form-group">
                  <div class = "col-sm-10">
                  <%= f.hidden_field(:recipient_id, :value => @task.user_id)%>
                </div>
                </div>
                <div class = "form-group">
                  <div class = "col-sm-10">
                    <%= f.hidden_field(:task_id, :value => @task.id)%>
                  </div>
                </div>

                <div class = "form-group">
                  <%= f.label :subject, class: "col-sm-2 control-label"  do %>
                      <i class="fa fa-key fa-fw"></i>
                  <% end %>
                  <div class = "col-sm-10">
                    <%= f.text_field :subject, class: "form-control col-sm-offset-1", placeholder:"Subject" %>
                  </div>
                </div>

                <div class = "form-group">
                  <%= f.label :body, class: "col-sm-2 control-label"  do %>
                      <i class="fa fa-pencil fa-fw"></i>
                  <% end %>
                  <div class = "col-sm-10">
                    <%= f.text_area :body, class:"form-control col-sm-offset-1", placeholder: "Body" %>
                  </div>
                </div>



                <div class = "row">
                  <%= f.submit "Send Message", class:"btn btn-primary btn-md span-right col-sm-offset-3"%>
                </div>
                </div>
                </div>
            <% end %>
            </div>
    </div>
  </div>
</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->

