<% provide(:title, @task.description) %>
<div class = "container">
  <div class="row">
    <div class="col-md-8 center">
      <section>
        <% @task.tags.any? %>
        <% @task.tags.each do |tag| %>
            <%= link_to tag.name, tagged_url(:tag => tag.name) %>
        <% end %>
      </section>
    </div>
  </div>
  <div class = "row">
    <% if current_user.id == @task.user_id %>
        <%= link_to 'Remove Listing',  {:controller=>:tasks, :action=>:destroy, :id=>@task},:data => { :confirm => "Are you sure?" }, :method=>:delete, class: "button close pull-left" %></td>
    <%end%>
  </div>
  <br/>
  <div class = "row">
    <div class = "col-xs-12 clearfix">
      <table class = "table table-responsive table-condensed">
        <thead>
        <tr>
          <th>Status</th>
          <th>Subject</th>
          <th>Description</th>
          <th>Zip Code</th>
          <th>Deliverables</th>
          <td>Review</td>
          <td>Rating</td>

          <td>Belongs to:</td>
        </tr>
        </thead>
        <tbody>
        <tr data-link = "<%=task_path(@task.id)%>" class ="row_hover">
          <td class = "text-center"><span class ="glyphicon glyphicon-credit-card"></span></td>
          <td><%= @task.subject %></td>
          <td><%= @task.description %></td>
          <td><%= @task.zipcode %></td>
          <td><%= @task.deliverables %></td>
          <% if @task.final_rating.nil? %>
              <td><%= link_to "Leave Review", "http://www.google.com" %></td>
          <% else %>
              <td><%=@task.final_review%></td>
          <% end %>
          <td>
            <ul class = "rating">
              <% (1..5).each do |i|%>
                  <li class = "rating_star " data-stars = "<%=i%>" data-task-id = "<%= @task.id%>" id = "<%="#{@task.id}_#{i}" %>" ></li>
              <% end %>
            </ul>
          </td>
          <td><%= link_to User.find(@task.user_id).first_name, user_path(@task.user.id) %>&nbsp;&nbsp;<a href = "#" data-toggle ="modal" data-target = "#messaging"><i class="fa fa-envelope fa-fw"></i></a></td>
        </tr>
        </tbody>
      </table>

      <%= image_tag("map.png", :class => "img-responsive img-thumbnail") %>
    </div>
  </div>
</div>



