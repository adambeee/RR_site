<div class="modal fade" id="review" role="dialog" aria-labelledby="review" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="review">Rio Runner</h4>
      </div>
      <div class="modal-body">
        <div class = "row">
          <div class = "col-sm-10">
            <h2 class = "text-center">Leave Review</h2>

            <%= simple_form_for(@review, html: {class:"form-horizontal", role: "form"}, :controller => "reviews") do |f|%>

                <div class = "form-group">
                  <div class = "col-sm-10">
                    <%= f.hidden_field(:task_id, :value => @task.id)%>
                  </div>
                </div>
                <div class = "form-group">
                  <div class = "col-sm-10">
                    <%= f.hidden_field(:user_id, :value => @task.wallet_id)%>
                  </div>
                </div>

                <div class = "form-group">
                  <%= f.label :score, class: "col-sm-2 control-label"  do %>
                      <i class="fa fa-plus-square-o fa-fw"></i>
                  <% end %>
                  <div class = "col-sm-10">
                    <%= f.input :score, :collection => 1..5, class: "form-control col-sm-offset-1", placeholder:"Score" %>
                  </div>
                </div>

                <div class = "form-group">
                  <%= f.label :body, class: "col-sm-2 control-label"  do %>
                      <i class="fa fa-envelope-o fa-fw"></i>
                  <% end %>
                  <div class = "col-sm-10">
                    <%= f.input :body, class:"form-control col-sm-offset-1", placeholder: "Body" %>
                  </div>
                </div>
                <div class = "row">
                  <%= f.submit "Submit Review", class:"back-btn pull-right col-sm-offset-3"%>
                </div>
                </div>
                </div>
            <% end %>
            </div>
    </div>
  </div>
</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->






<td><%= link_to "Leave Review", {:controller => "reviews", :action => "create", :id => @task.id }%></td>