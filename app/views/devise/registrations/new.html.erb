<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2>Sign up</h2>
    <%= form_for(resource, :as => resource_name, html: {class: "form-group form-horizontal", role: "form"}, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

  <div class="row">
    <div class = "col-xs-6">
        <%= f.label :first_name, class: "control-label" %>
        <%= f.text_field :first_name, :placeholder =>"First Name", :autofocus => true, class: "form-control pull-left"%>
    </div>

    <div class = "col-xs-6">
        <%= f.label :last_name, class: "control-label" %>
          <%= f.text_field :last_name, :placeholder =>"Last Name", class: "form-control pull-right"%>
    </div>
  </div>
  <div class = "row">
    <div class = "col-sm-3">
        <%= f.label :phone, class: "control-label" %>
        <%= f.phone_field :phone, class: "form-control pull-left",:placeholder =>"(505) 555-5555"%>
    </div>
  <div class = "col-sm-6">
        <%= f.label :email, class: "control-label" %>
        <%= f.phone_field :email, class: "form-control pull-right", :placeholder =>"adam@riorunner.com"%>
  </div>
  </div>
  <div class="row">
    <div class = "col-xs-6">
    <%= f.label :password, class: "control-label" %>
    <%= f.password_field :password, :placeholder =>"Password", class: "form-control pull-left"%>
    </div>
    <div class = "col-xs-6">
    <%= f.label :password_confirmation, class: "control-label" %>
    <%= f.password_field :password_confirmation, :placeholder =>"Password Confirmation", class: "form-control pull-right"%>
    </div>
  </div>
  <div class = "row">
    <div class = "col-sm-6 col-sm-offset-6">
      <br/>
      <%= f.submit "Sign up", class: "btn btn-primary pull-right" %>
    </div>
  </div>
<% end %>
    <h3>PS... This form definitely needs some sprucing up...</h3>
</div>
